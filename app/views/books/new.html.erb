<h2>Add New Books</h2>

<%= form_for @book do |f| %>

  <div class="form-group">
    <%= f.label :title  %><br/>
    <%= f.text_field :title, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :isbn  %><br/>
    <%= f.text_field :isbn, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :category  %><br/>
    <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]},
      {:include_blank => 'Select One'}, class:'form-control'  %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :author  %><br/>
    <%= f.select :autho_id, Author.all.collect {|x| [x.name, x.id]},
      {:include_blank => 'Select One'}, class:'form-control'  %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :publisher  %><br/>
    <%= f.select :publisher_id, Publisher.all.collect {|x| [x.name, x.id]},
      {:include_blank => 'Select One'}, class:'form-control'  %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :format  %><br/>
    <%= f.text_field :format, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :excerpt  %><br/>
    <%= f.text_field :excerpt, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :pages  %><br/>
    <%= f.text_field :pages, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :price  %><br/>
    <%= f.text_field :price, class:'form-control'  %><br/>
  </div>

  <div class="form-group">
    <%= f.label :buy  %><br/>
    <%= f.text_field :buy, class:'form-control'  %><br/>
  </div>

<% end %>